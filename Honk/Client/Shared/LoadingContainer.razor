<div>
    @if (Loading)
    {
        <div class="@HtmlClassList d-flex justify-center align-items-center">
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />

            @if (LoadingMessage is not null)
            {
                <MudText Class="loading-message">@LoadingMessage</MudText>
            }
        </div>
    }
    else
    {
        <div class="@HtmlClassList">
            @ChildContent
        </div>
    }
</div>

@code {
    [Parameter]
    public bool Loading { get; set; } = false;

    [Parameter]
    public string? LoadingMessage { get; set; }

    [Parameter]
    public EventCallback<bool> LoadingChanged { get; set; }

    [Parameter]
    public string? HtmlClassList { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
